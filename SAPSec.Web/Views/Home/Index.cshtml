@using SAPSec.Web.Constants
@model SAPSec.Web.ViewModels.HomeViewModel
@{
    ViewData[ViewDataKeys.Title] = PageTitles.ServiceHome;
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper govuk-main-wrapper--l" id="main-content" role="main">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-xl">
                    Get school improvement insights
                </h1>

                <p class="govuk-body">
                    Use this service to searchto find similar schools in England and Comapre their academic performance to your school
                </p>

                <p class="govuk-body">
                    This service can help you to identify areas for opportunity with your school's performance and connect with similar schools that have shown strength in these areas.
                </p>

                <p class="govuk-body">
                    View data from the Department for Education (DfE) to help you understand how your school compares to other schools with similar characteristics, such as:
                </p>

                <ul class="govuk-list govuk-list--bullet">
                    <li>total number of pupils</li>
                    <li>eligibility for pupil premimum</li>
                    <li>percentage of pupils with SEN support</li>
                </ul>

               

                <p class="govuk-body">
                    You will need a <a href="https://help.signin.education.gov.uk/" class="govuk-link">DfE Sign-in</a> account to access this service.
                </p>

                <a asp-controller="Auth"
                   asp-action="SignIn"
                   asp-route-returnUrl="/SchoolHome"
                   role="button"
                   draggable="false"
                   class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8"
                   data-module="govuk-button">
                    Start now
                    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                    </svg>
                </a>
            </div>
        </div>

    </main>
</div>