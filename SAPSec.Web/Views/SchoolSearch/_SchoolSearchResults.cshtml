@model SAPSec.Web.ViewModels.SchoolSearchResultViewModel[]

<p class="govuk-body govuk-!-margin-bottom-4">Showing 1-@Model.Length of @Model.Length schools</p>
<hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-top-2 govuk-!-margin-bottom-0">

<ul class="govuk-list app-school-results">
    @foreach (var result in Model)
    {
        <li class="app-school-result" id="search-result-@result.URN">
            <a class="govuk-link govuk-link--no-visited-state govuk-!-font-weight-bold"
               href="@Url.Action("Index", "School", new { result.URN })"
               aria-describedby="school-@result.URN-hint">
                @result.SchoolName
            </a>
            <p class="govuk-body-s govuk-!-margin-top-1 govuk-!-margin-bottom-0 app-school-result__la">
                <strong>Local Authority:</strong> @result.LocalAuthority
            </p>
        </li>
    }
</ul>
